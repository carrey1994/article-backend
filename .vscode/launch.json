{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Server",
      "program": "${workspaceFolder}/index.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "console": "integratedTerminal"
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/src/tests/index.test.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "console": "integratedTerminal"
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Current File",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "console": "integratedTerminal"
    },
    {
      "type": "bun",
      "request": "attach",
      "name": "Attach to Process",
      "port": 9229
    }
  ],
  "compounds": [
    {
      "name": "Server + Attach",
      "configurations": ["Debug Server", "Attach to Process"]
    }
  ]
}