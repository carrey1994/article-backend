{
  "name": "deno-backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "dev:all": "bun run scripts/dev-all.ts",
    "start": "bun run index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:push": "bunx prisma db push",
    "db:generate": "bunx prisma generate",
    "db:studio": "bunx prisma studio",
    "db:seed": "bun run scripts/init-db.ts",
    "db:reset": "bunx prisma db push --force-reset && bun run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "setup": "bun install && bunx prisma generate && bun run docker:up && sleep 5 && bun run db:reset",
    "build": "bun build ./index.ts --target bun --outdir ./dist",
    "lint": "bunx tsc --noEmit",
    "format": "bunx prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@elysiajs/cors": "latest",
    "@elysiajs/swagger": "latest",
    "elysia": "latest",
    "@prisma/client": "latest",
    "marked": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "latest",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0"
  }
}
